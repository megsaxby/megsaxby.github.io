doctype
html
  head
    title #{title} - Meg Saxby
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lato:400,700')

  body
    .container
      .main-content
        ul.navbar
          li
            a(href="/about") Who I am
          li
            a(href="/about") What I offer
          li
            a(href="/about") Current
        
        .logo
          p Educator, organizer, activist
          .main-title
            h1 Meg Saxby
        
          .find-out-more-link
            a Find out more
      
      .contact
        .testimonials-container
          .testimonials
            .carousel-container
              -for (index in testimonials)
                p.testimonial #{testimonials[index].content}
        
        .contact-info-container
          .contact-info
            .title-container
              .title
                h1 Contact 
                p Get in touch with Meg
            .details-container
              .details
                .contact-detail-name ADDRESS
                  .contact-detail 
                    p 1589 Dupont St
                    p Toronto, ON M6P 3S5
                    p Canada

                .contact-detail-name EMAIL
                  .contact-detail meg@megsaxby.com

                .contact-detail-name PHONE
                  .contact-detail +1.675.3457264